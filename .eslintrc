{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "react": { "version": "detect" },
    "import/resolver": { "typescript": {} }
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "prettier/react",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "react",
    "formatjs",
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "globals": {
    "beforeAll": true,
    "describe": true,
    "expect": true,
    "global": true,
    "insights": true,
    "it": true,
    "mount": true,
    "process": true,
    "render": true,
    "shallow": true,
    "React": true
  },
  "rules": {
    "comma-dangle": 2,
    "comma-spacing": [
      2,
      {
        "after": true
      }
    ],
    "comma-style": 2,
    "camelcase": 0,
    "curly": [
      "error",
      "all"
    ],
    "dot-notation": 2,
    "eol-last": 2,
    "eqeqeq": 2,
    "func-names": [
      "error",
      "never"
    ],
    "key-spacing": 2,
    "keyword-spacing": 2,
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "max-len": [
      "error",
      150
    ],
    "new-cap": 2,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-console": 1,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "no-trailing-spaces": 2,
    "no-use-before-define": [0],
    "no-undef": 2,
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ],
    "no-var": 2,
    "no-with": 2,
    "object-shorthand": 2,
    "one-var": [
      "error",
      "never"
    ],
    "padding-line-between-statements": [
      "warn",
      {
        "blankLine": "always",
        "prev": "block-like",
        "next": "*"
      }
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-blocks": 2,
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "space-unary-ops": [
      "error",
      {
        "words": false,
        "nonwords": false
      }
    ],
    "vars-on-top": 2,
    "wrap-iife": 2,
    "yoda": [
      "error",
      "never"
    ],
    "react/prop-types": 1,
    "@typescript-eslint/no-unused-vars": 1,
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/no-use-before-define": [1]

  }
}
